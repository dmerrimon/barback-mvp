# Environment Configuration for Barback
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
PORT=3001

# Frontend URL (for CORS and QR codes)
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/barback
DB_HOST=localhost
DB_PORT=5432
DB_NAME=barback
DB_USER=barback_user
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# BLE Beacon Configuration
BEACON_UUID=E2C56DB5-DFFB-48D2-B060-D0F5A71096E0
BEACON_MAJOR=1
BEACON_MINOR=1
BEACON_RSSI_THRESHOLD=-65

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/barback.log

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Twilio (for SMS receipts - optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_here

# File Upload (optional)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=barback-uploads

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here